<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.WorkerMapper">

    <sql id="Base_Column_List">
        <if test="true">
            workerId,workerName,workerAge,workerPhone,workerPlace
        </if>
    </sql>

    <select id="selectAll" resultType="com.example.entity.Worker">
        select
        <include refid="Base_Column_List" />
        from worker
        <where>
            <if test="workerId != null"> and workerId= #{workerId}</if>
            <if test="workerName != null"> and workerName= #{workerName}</if>
            <if test="workerAge != null"> and workerAge= #{workerAge}</if>
            <if test="workerPhone != null"> and workerPhone= #{workerPhone}</if>
            <if test="workerPlace != null"> and workerPlace= #{workerPlace}</if>
        </where>
        order by workerId desc
    </select>

    <select id="selectById" resultType="com.example.entity.Worker">
        select
        <include refid="Base_Column_List" />
        from worker
        where workerId = #{workerId}
    </select>

    <delete id="deleteById">
        delete from worker
        where  workerId = #{workerId}
    </delete>
    <insert id="insert" parameterType="com.example.entity.Worker" useGeneratedKeys="true">
        insert into worker
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="workerId != null">workerId,</if>
                <if test="workerName != null">workerName,</if>
                <if test="workerAge != null">workerAge,</if>
                <if test="workerPhone != null">workerPhone,</if>
                <if test="workerPlace != null">workerPlace,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="workerId != null">#{workerId},</if>
                <if test="workerName != null">#{workerName},</if>
                <if test="workerAge != null">#{workerAge},</if>
                <if test="workerPhone != null">#{workerPhone},</if>
                <if test="workerPlace != null">#{workerPlace},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Worker">
        update worker
        <set>
            <if test="workerName != null">
                workerName = #{workerName},
            </if>
            <if test="workerAge != null">
                workerAge = #{workerAge},
            </if>
            <if test="workerPhone != null">
                workerPhone = #{workerPhone},
            </if>
            <if test="workerPlace != null">
                workerPlace = #{workerPlace},
            </if>
        </set>
        where workerId = #{workerId}
    </update>
</mapper>