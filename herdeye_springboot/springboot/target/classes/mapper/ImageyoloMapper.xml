<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ImageyoloMapper">

    <sql id="Base_Column_List">
        <if test="true">
            imageId,missionIdim,detectionTime,srcImage,yoloImage,detectionResult,yoloModule
        </if>
    </sql>

    <select id="selectAll" resultType="com.example.entity.Imageyolo">
        select
        <include refid="Base_Column_List" />
        from imageyolo
        <where>
            <if test="imageId != null"> and imageId= #{imageId}</if>
            <if test="missionIdim != null"> and missionIdim= #{missionIdim}</if>
            <if test="detectionTime != null"> and detectionTime= #{detectionTime}</if>
            <if test="srcImage != null"> and srcImage= #{srcImage}</if>
            <if test="yoloImage != null"> and yoloImage= #{yoloImage}</if>
            <if test="detectionResult != null"> and detectionResult= #{detectionResult}</if>
            <if test="yoloModule != null"> and yoloModule= #{yoloModule}</if>
        </where>
        order by imageId desc
    </select>

    <select id="selectById" resultType="com.example.entity.Imageyolo">
        select
        <include refid="Base_Column_List" />
        from imageyolo
        where imageId = #{imageId}
    </select>

    <delete id="deleteById">
        delete from imageyolo
        where  imageId = #{imageId}
    </delete>
    <insert id="insert" parameterType="com.example.entity.Imageyolo" useGeneratedKeys="true">
        insert into imageyolo
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="imageId != null">imageId,</if>
                <if test="missionIdim != null">missionIdim,</if>
                <if test="detectionTime != null">detectionTime,</if>
                <if test="srcImage != null">srcImage,</if>
                <if test="yoloImage != null">yoloImage,</if>
                <if test="detectionResult != null">detectionResult,</if>
                <if test="yoloModule != null">yoloModule,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="imageId != null">#{imageId},</if>
                <if test="missionIdim != null">#{missionIdim},</if>
                <if test="detectionTime != null">#{detectionTime},</if>
                <if test="srcImage != null">#{srcImage},</if>
                <if test="yoloImage != null">#{yoloImage},</if>
                <if test="detectionResult != null">#{detectionResult},</if>
                <if test="yoloModule != null">#{yoloModule},</if>
        </trim>
    </insert>
    <update id="updateById" parameterType="com.example.entity.Imageyolo">
        update imageyolo
        <set>
            <if test="missionIdim != null">
                missionIdim = #{missionIdim},
            </if>
            <if test="detectionTime != null">
                detectionTime = #{detectionTime},
            </if>
            <if test="srcImage != null">
                srcImage = #{srcImage},
            </if>
            <if test="yoloImage != null">
                yoloImage = #{yoloImage},
            </if>
            <if test="detectionResult != null">
                detectionResult = #{detectionResult},
            </if>
            <if test="yoloModule != null">
                yoloModule = #{yoloModule},
            </if>
        </set>
        where imageId = #{imageId}
    </update>
</mapper>